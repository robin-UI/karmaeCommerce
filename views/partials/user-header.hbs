<!-- Start Header Area -->
	<header class="header_area sticky-header">
		<div class="main_menu">
			<nav class="navbar navbar-expand-lg navbar-light main_box">
				<div class="container">
					<!-- Brand and toggle get grouped for better mobile display -->
					<a class="navbar-brand logo_h" href="/"><img src="/img/logo.png" alt=""></a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
					 aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					<!-- Collect the nav links, forms, and other content for toggling -->
					<div class="collapse navbar-collapse offset" id="navbarSupportedContent">
						
						<ul class="nav navbar-nav menu_nav ml-auto">
							<li class="nav-item active"><a class="nav-link" href="/">Home</a></li>
							<li class="nav-item submenu ">
								<a href="/shop" class="nav-link dropdown-toggle"  role="button" aria-haspopup="true"
								 aria-expanded="false">Shop</a>
							</li>
							<li class="nav-item submenu ">
								<a href="/user-profile" class="nav-link " role="button" aria-haspopup="true"
								 aria-expanded="false">Profile</a>
							</li>
							<li class="nav-item submenu ">
								<a href="/user-orders-list" class="nav-link "  role="button" aria-haspopup="true"
								 aria-expanded="false">Orders</a>
							</li>
							<li class="nav-item submenu ">
								{{#if userLog.username}}
									<a href="#" class="dropdown-toggle primary-btn" data-toggle="dropdown" role="button" aria-haspopup="true"
								 aria-expanded="false" style=" padding: 0 10px; border-radius: 0px;" >{{userLog.username}}</a>
								<ul class="dropdown-menu">

									<li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
								</ul>
								{{else}}
								<a href="#" class="dropdown-toggle primary-btn" data-toggle="dropdown" role="button" aria-haspopup="true"
								 aria-expanded="false" style=" padding: 0 10px; border-radius: 0px;" >Login / SignUp</a>
								<ul class="dropdown-menu">
									<li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
									<li class="nav-item"><a class="nav-link" href="/signup">SignUp</a></li>
								</ul>
								{{/if}}
							</li>
						</ul>
						
						<ul class="nav navbar-nav navbar-right">
							<li class="nav-item"><a href="/cart" class="cart"><span class="ti-bag"></span>{{#if userLog.username}}
                          	<span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cart-count">{{cartCount}}</span>
                      		{{/if}}</a></li>
							<li class="nav-item"><a href="/wishlist" class="cart"><span class="lnr lnr-heart"></span></a></li>
							<li class="nav-item">
								<button class="search"><span class="lnr lnr-magnifier" id="search"></span></button>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</div>
		<div class="search_input" id="search_input_box">
			<div class="container">
				<form class="d-flex justify-content-between">
					<input type="text" class="form-control" id="search_input" placeholder="Search Here">
					<button type="submit" class="btn"></button>
					<span class="lnr lnr-cross" id="close_search" title="Close Search"></span>
				</form>
			</div>
		</div>
	</header>
	<!-- End Header Area -->
