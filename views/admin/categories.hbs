<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Catagory's</h4>
                    </p>
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th> # </th>
                          <th> Catagory name </th>

                          <th> Edit </th>
                          <th> Delete </th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each categories}}
                        <tr>
                          <td> {{inc @index}} </td>
                          <td> {{category}} </td>

                          <td> <a href="/admin/edit-catagory/{{_id}}" class="mdi mdi-tooltip-edit" ></a></td>
                          <td> <a href="#" class="mdi mdi-delete" onclick=" deleteCategory('{{this.category}}','{{this._id}}')"></a> </td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>  
        </div>
    </div>
</div>