<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product Details</h4>
                    </p>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Coupon Id</th>
                                <th>Coupon Name</th>
                                <th>Coupon percentage</th>
                                <th>Start date </th>
                                <th>End date</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                             {{#each data}}
                            <tr>
                                <td>{{this.couponID}}</td>
                                <td>{{this.couponName}}</td>
                                <td>{{this.persentage}}</td>
                                <td>{{this.startdate}}</td>
                                <td>{{this.enddate}}</td>
                                <td><a onclick="deleteCoupon('{{this._id}}')" class="btn btn-danger">Delete</a></td>
                            </tr>
                  {{/each}}
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

function deleteCoupon(catId){
$.ajax({
url:'/admin/delete-coupon/'+catId,
method:'get',
success:(response)=>{
  if(response){
    
    swal("Good job!", "Your coupon has been deleted!", "success").then(()=>{

    location.reload()
    })
  }

}
})
}


</script>