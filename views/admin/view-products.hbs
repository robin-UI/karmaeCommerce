<div class="main-panel">
    <div class="content-wrapper">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Product Details</h4>
                    </p>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th> Product </th>
                                <th> Product name </th>
                                <th> Amount </th>
                                <th> Category </th>
                                <th> Edit</th>
                                <th> Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                                {{#each products}}
                            <tr>
                                <td class="py-1">
                                    <img src="/images/{{this.Image.[0]}}" alt="image" />
                                </td>
                                <td> {{name}} </td>
