                                <td> {{category}} </td>
                                <td><a class="mdi mdi-tooltip-edit" href="/admin/edit-product/{{this._id}}"></a></td>
                                <td><a class="mdi mdi-delete" href="/admin/delete-product/{{this._id}}"></a></td>
                            </tr>
                                {{/each}}
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>