<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Add Category</h4>
                        <form class="forms-sample" method="post" action="/admin/add-offer"
                            enctype="application/x-www-form-urlencoded">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Offer Name</label>
                                <input type="text" class="form-control" id="exampleInputUsername1"
                                     name="offerName">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUsername1">Offer Percentage</label>
                                <input type="text" class="form-control" id="exampleInputUsername1"
                                name="OfferPercentage">
                            </div>

                            <div class="form-group">
                                <label for="exampleSelectGender">Products</label>
                                <select class=" btn btn-block btn-outline-primary dropdown-toggle"
                                    id="exampleSelectGender" style="width: 100%;" name="productID">
                                    <option hidden selected >Select Products</option>
                                    {{#each data}}
                                        <option name="productID" value="{{this._id}}">{{productName}}</option>
                                    {{/each}}
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="exampleInputUsername1">Descripption</label>
                                <textarea type="text" class="form-control" id="exampleInputUsername1"
                                 name="Description"></textarea>
                            </div>

                            

                            <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
